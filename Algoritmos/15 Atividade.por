programa {
  funcao inicio() 
  /*15) Crie um programa que leia o número de dias trabalhados em um mês e mostre o
salário de um funcionário, sabendo que ele trabalha 8 horas por dia e ganha R$25
por hora trabalhada.*/
  { inteiro dia cadeia nome  
    {
		escreva ( "Olá, digite seu nome: \n" )
		leia (nome)

		escreva ( "Seja bem-vindo " ,nome, ", quantos dias trabalhou no ultimo mes? \n" )
		leia (dia)

		escreva ( "Seu salario deu o total de: R$" ,dia * 200 )
	}
}